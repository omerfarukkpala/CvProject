<style>
    .hobi-card {
        background: var(--clr-white);
        padding: 1.5rem;
        margin-bottom: 2rem;
        border-radius: var(--radius);
        transition: var(--transition);
    }

        .hobi-card:hover {
            background: var(--clr-primary-5);
            color: var(--clr-white);
        }

        .hobi-card .card-body {
            transition: var(--transition);
        }

        .hobi-card:hover .card-body {
            color: var(--clr-white);
        }
</style>

<div class="resume-section-content">
    <h2 class="mb-5">
        <i class="fas fa-paint-brush"></i> Hobilerim
    </h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-12 mb-4">
                <div class="card hobi-card">
                    <div class="card-body">
                        <h5 class="card-title">@item.Aciklama1</h5>
                        <p class="card-text">@item.Aciklama2</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
