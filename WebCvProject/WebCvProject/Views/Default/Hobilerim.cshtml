<!-- CSS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css" />

<style>
    .hobi-card {
        background: var(--clr-white);
        padding: 1.5rem;
        margin-bottom: 2rem;
        border-radius: var(--radius);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: var(--transition);
    }

        .hobi-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
        }

        .hobi-card .card-body {
            transition: var(--transition);
        }

        .hobi-card:hover .card-body {
            color: var(--clr-primary);
        }

    .popup-link {
        cursor: pointer;
    }

    .fancybox-container {
        max-width: 90vw;
        max-height: 90vh;
    }

    .fancybox-image {
        max-width: 100%;
        max-height: 100%;
    }
</style>

<div class="resume-section-content">
    <h2 class="mb-5">
        <i class="fas fa-paint-brush"></i> Hobilerim
    </h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card hobi-card">
                    <div class="card-body">
                        <a href="@item.Aciklama1" class="popup-link">
                            <img src="@item.Aciklama1" alt="" height=150 class="popup-image" />
                        </a>
                        <br />
                        <a href="@item.Aciklama2" target="_blank" rel="noopener noreferrer">@item.Aciklama2</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.js"></script>

<script>
    $(document).ready(function () {
        $(".popup-link").fancybox({
            type: 'image',
            transitionEffect: "fade",
            thumbs: {
                autoStart: true,
                axis: 'x'
            }
        });
    });
</script>
