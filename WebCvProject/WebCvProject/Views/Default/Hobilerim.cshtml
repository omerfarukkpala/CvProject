<style>
    .hobi-card {
        background: var(--clr-white);
        padding: 1.5rem;
        margin-bottom: 2rem;
        border-radius: var(--radius);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: var(--transition);
    }

        .hobi-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
        }

        .hobi-card .card-body {
            transition: var(--transition);
        }

        .hobi-card:hover .card-body {
            color: var(--clr-primary);
        }

    .popup-content {
        display: none;
    }
</style>

<div class="resume-section-content">
    <h2 class="mb-5">
        <i class="fas fa-paint-brush"></i> Hobilerim
    </h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card hobi-card">
                    <div class="card-body">
                        <a href="#popup-@item.ID" class="popup-link">
                            <img src="@item.Aciklama1" alt="" style="margin-bottom:1px" height=150 />
                        </a>
                        <br />
                        <a href="@item.Aciklama2" target="_blank" rel="noopener noreferrer">@item.Aciklama2</a>
                    </div>
                </div>
            </div>

            <!-- Popup Content -->
            <div id="popup-@item.ID" class="popup-content">
                <img src="@item.Aciklama1" alt="" height=400 />
            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.popup-link').magnificPopup({
            type: 'inline',
            midClick: true, // Allow opening popup on middle mouse click
            removalDelay: 300,
            mainClass: 'mfp-fade'
        });
    });
</script>
