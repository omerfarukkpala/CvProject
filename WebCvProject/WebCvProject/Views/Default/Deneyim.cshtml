<div class="resume-section-content">
    <h2 class="mb-5">
        <i class="fas fa-briefcase"></i> Deneyimlerim
    </h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-12 mb-4">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column flex-md-row justify-content-between">
                            <div class="flex-grow-1">
                                <h3 class="mb-0">@item.Baslik</h3>
                                <div class="subheading mb-3">@item.AltBaslik</div>
                                <p class="text-justify">@item.Aciklama</p>
                            </div>
                            <div class="flex-shrink-0"><span class="text-primary">@item.Tarih</span></div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
